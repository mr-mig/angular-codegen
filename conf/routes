# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Assets.at(path="/public", file="index.html")

# Map AngularJS snippets to controller methods
GET     /partials/summary.html      controllers.Application.summary()
GET     /partials/detail.html      controllers.Application.detail()

# Map JavaScript resources to /javascripts
GET     /javascripts/*file          controllers.Assets.at(path = "/public/javascripts", file)

# Map CSS resources to /stylesheets
GET     /stylesheets/*file          controllers.Assets.at(path = "/public/stylesheets", file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
